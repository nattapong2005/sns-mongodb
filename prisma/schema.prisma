generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  posts posts[]
}

model posts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content  String
  published Boolean @default(false)
  author    users     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
}
